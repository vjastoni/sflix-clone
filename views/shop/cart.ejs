<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/movie.css" />
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
    <% if (movies.length > 0) { %>
    <ul class="whitey">
      <% movies.forEach(p => { %>
      <li>
        <p style="font-weight: bold;"> <%= p.movieData.title %> </p>
        <p>Quantity: <%= p.qty %></p>
        <form action="/cart-delete-movie" method="POST">
          <input type="hidden" value="<%= p.movieData.id %>" name="movieId" />
          <button class="btn" type="submit">Delete</button>
        </form>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <h1 style="padding-left: 20px; color: white;">No Movies in Cart!</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>